{
  "compilerOptions": {
    "target": "ES2020",                           
    "module": "ES2020",
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "typeRoots": [ "./lib/types" ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "node_modules"
  ]
}