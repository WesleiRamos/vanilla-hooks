{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2020",                           
    "module": "es2020",
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "paths": {
      "src/": [ "./src" ]
    },
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "types": [
      "jest"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}